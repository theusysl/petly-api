// tsconfig.json

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Alterado para NodeNext
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true // Boa prática adicionar
  },
  "include": ["src/**/*"], // Garante que só a pasta src seja compilada
  "exclude": ["node_modules"]
}